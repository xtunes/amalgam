= form_for @resource, :url => admin_update_resource_path(params[:resources]) ,:html => {:class => 'basic'}, :builder => Amalgam::Admin::AttrInputFormBuilder do |f|
  %legend
  - @resource.class.admin_attrs.each do |attr|
    = f.label attr
    = f.attr_input attr
  - if @resource.class.taggable?
    - @resource.class.tag_types.each do |type|
      = f.label "#{type.to_s.singularize}_list"
      = f.tag_input "#{type.to_s.singularize}_list"
  %br
  %p
    = f.submit :class => "btn-primary btn"
    = link_to t("admin.a.back"), @back_path, :class => "btn"
    = link_to t("admin.a.edit"), amalgam.mercury_editor_path("#{@resource.class.to_s.tableize}/#{@resource.class.respond_to?(:slug_field) ? @resource.send(@resource.class.slug_field) : @resource.to_param}"), :class => "btn"