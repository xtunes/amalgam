.navbar.navbar-fixed-top
  .navbar-inner
    .container
      =link_to 'Amalgam', '/' ,:class => 'brand'
      %ul.nav
        = controller_links
        = drop_down Amalgam::Models::Group.model_name.human,'#', :controller => "amalgam/admin/groups" do
          = dropdown_item(t('amalgam.admin.actions.index'), amalgam.admin_groups_path)
          = dropdown_item(t('amalgam.admin.actions.new'), amalgam.new_admin_group_path)
        - if Amalgam.i18n
          = drop_down t("amalgam.locales.#{I18n.locale.to_s}"), '#' do
            - I18n::available_locales.each do |locale|
              = dropdown_item(t("amalgam.locales.#{locale.to_s}"), locale_url(locale.to_s.downcase))
      %ul.nav.pull-right
        - if editor
          %li.edit
            %a{:href => '#'}= t('amalgam.admin.actions.edit')
        - elsif params[:resources]
          = form_tag(admin_search_resources_url(params[:resources]),:method => 'get', :class => "navbar-search pull-left search") do
            = text_field_tag 'content', nil, :class => 'span2 search-query', :placeholder => 'Search'
        %li.divider-vertical
        - if current_admin != true
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown"}
              = current_admin.username
              %b.caret
            %ul.dropdown-menu
              %li= link_to(t('amalgam.sessions.actions.edit_info'),amalgam.edit_admin_path)
              %li= link_to(t('amalgam.sessions.actions.sign_out'), amalgam.signout_path, :method => 'delete')
